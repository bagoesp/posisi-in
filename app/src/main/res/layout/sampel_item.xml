<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_label"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/tosca">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_label_sampel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Ruang 307"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_delete_sampel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@color/tosca"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_delete_forever_18"
                    app:tint="@color/white" />

            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_ap1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_label"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_ap1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Access Point 1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ap1_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap1"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="-70"
                android:textColor="@color/ireng"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_ap1_dbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap1_level"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="dBm"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ap2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_ap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Access Point 2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ap2_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap2"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="-70"
                android:textColor="@color/ireng"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_ap2_dbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap2_level"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="dBm"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ap3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_label"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp">

            <TextView
                android:id="@+id/tv_ap3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Access Point 3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ap3_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap3"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="-70"
                android:textColor="@color/ireng"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_ap3_dbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ap3_level"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="dBm"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@id/rl_ap2">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_creation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="1 jam yang lalu"
                android:textColor="#909090"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>