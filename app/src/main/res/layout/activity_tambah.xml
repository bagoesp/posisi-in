<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TambahActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/tb_tambah"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true">

            <TextView
                android:id="@+id/tv_kelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/btn_back_tambah"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tambah data sampel"
                android:textColor="@color/ireng"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_back_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/ireng" />

        </RelativeLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_tambah"
        app:layout_constraintBottom_toTopOf="@id/ll_button_tambah">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tambah"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_undraw_signal_searching_bhpc"
                android:layout_marginTop="56dp"/>

            <LinearLayout
                android:id="@+id/ll_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical"
                android:layout_marginTop="56dp">

                <TextView
                    android:id="@+id/tv_rss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Data level kekuatan sinyal wi-fi"
                    android:textColor="@color/ireng"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ap1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Access point 1"
                    app:boxCornerRadiusBottomEnd="40dp"
                    app:boxCornerRadiusBottomStart="40dp"
                    app:boxCornerRadiusTopEnd="40dp"
                    app:boxCornerRadiusTopStart="40dp"
                    app:startIconDrawable="@drawable/ic_baseline_wifi_24"
                    app:suffixText="dBm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ap1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/ireng" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ap2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Access point 2"
                    app:boxCornerRadiusBottomEnd="40dp"
                    app:boxCornerRadiusBottomStart="40dp"
                    app:boxCornerRadiusTopEnd="40dp"
                    app:boxCornerRadiusTopStart="40dp"
                    app:startIconDrawable="@drawable/ic_baseline_wifi_24"
                    app:suffixText="dBm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ap2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/ireng" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ap3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Access point 3"
                    app:boxCornerRadiusBottomEnd="40dp"
                    app:boxCornerRadiusBottomStart="40dp"
                    app:boxCornerRadiusTopEnd="40dp"
                    app:boxCornerRadiusTopStart="40dp"
                    app:startIconDrawable="@drawable/ic_baseline_wifi_24"
                    app:suffixText="dBm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ap3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/ireng" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_label"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Label lokasi"
                    app:boxCornerRadiusBottomEnd="40dp"
                    app:boxCornerRadiusBottomStart="40dp"
                    app:boxCornerRadiusTopEnd="40dp"
                    app:boxCornerRadiusTopStart="40dp"
                    app:startIconDrawable="@drawable/ic_baseline_label_24"
                    android:layout_marginBottom="24dp">

                    <AutoCompleteTextView
                        android:id="@+id/ac_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="center"
                        android:textColor="@color/ireng" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





    <LinearLayout
        android:id="@+id/ll_button_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_tambah"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Scan jaringan wi-fi"
            android:textAllCaps="false"
            android:textColor="@color/ireng"
            android:textSize="16sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_simpan_tambah"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Simpan data sampel"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>